.characteristics {
	background: linear-gradient(180.05deg, #702381 0.04%, #762486 45.32%, #762586 66.63%, #762682 78.59%, #843286 99.96%);
	padding: 2.35rem 0 1.85rem
	position: relative
}

.characteristics__wrap {
	display: flex
}

.characteristics__column-left {
	width: 42.4%;
	padding: 0 3.1rem;
}

.gallery__wrap {
	display: flex
	justify-content: space-between
	flex-wrap: wrap
}

.gallery__item {
	box-shadow: 0px 0px 10px rgba(78, 25, 88, 0.8);
	border-radius: rem(12);
	width: rem(200)
	height: rem(200)
	overflow: hidden
	margin-bottom: 0.6rem
	position: relative
	font-family: 'object-fit: cover;';
	a {
		display: inline-block
		width: 100%
		height: 100%
	}
	
	img {
		transition: all 300ms ease-in-out;
		width: 100%
		height: 100%
		object-fit cover
	}
	
	&:after {
		content: "+";
		display: block;
		position: absolute;
		top: 50%;
		left: 50%;
		transform translate(-50%, -50%) scale(0)
		font-family: Montserrat;
		font-style: normal;
		font-weight: bold;
		font-size: rem(47);
		line-height: rem(57);
		color: #FFFFFF;
		pointer-events: none;
		opacity: 0;
		transition: all 300ms ease-in-out;
	}
	
	&:hover {
		&:after {
			opacity: 1
			transform translate(-50%, -50%) scale(1)
		}
		
		img {
			opacity: 0.5
			filter: blur(5px);
		}
	}
}

.characteristics__column-right {
	width: 58%;
	padding-left: 0.9rem;
}

.characteristics__title {
	margin-top: 2.6rem
	
	h2 {
		color: #C6A6CD;
	}
}
.characteristics__table{
	margin-top: 1.9rem
}
.characteristics__table-line {
	display: flex
	flex-wrap: wrap
	span{
		color: #ffffff
		font-size: rem(18)
		line-height: rem(35)
		font-weight: 500
		width: 30.6rem;
		display: inline-block
	}
	p{
		font-size: rem(18)
		line-height: rem(35)
		font-weight: 500
		color: #C6A6CD;
	}
}
	.characteristics__discount-btn{
		display: flex
		justify-content: center
		align-items: center
		margin-top: 2.4rem
	}