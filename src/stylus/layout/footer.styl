
.create{
	margin-top: 3.8rem
	p{
		font-size: rem(15);
		line-height: rem(18)
		font-weight: 500;
		color: #DA99E3;
	}
	a{
		display: inline-block
		font-size: rem(15);
		line-height: rem(18)
		font-weight: 500;
		color: #DA99E3;
		text-decoration: none
		position: relative
		 &:after {
		     content: "";
		     display: block;
		     position: absolute;
			 background: #DA99E3
			 width: 0
			 height: 1px
			 left: 0
			 right: 0
			 bottom: -2px
			 transition width 400ms ease-in-out
		   }
		
	}
	&:hover{
		a{
			&:after{
				width: 100%
			}
		}
	}
}