.btn {
	margin: 0
	text-align: center
	text-decoration: none
	cursor: pointer
	position: relative
	z-index: 5
	display: inline-block
	border-radius: rem(50);
	box-shadow: 0px 0px 10px rgba(78, 25, 88, 0.8);
	transition background 300ms ease-in-out;
	span {
		font-family: 'Montserrat',sans-serif;
		font-size: rem(20);
		line-height: rem(24)
		letter-spacing 2px
		text-transform: uppercase;
		font-weight: 600;
		display: inline-block
		position: relative
		z-index: 2
	}
}

.btn_big {
	padding: 1.1rem 0;
	width: rem(280);
	height: rem(55);
}

.btn_orange{
	//background-position: 50% 0;
	//background-size: 150% 150%;
	color: #ffffff
	transition all 300ms ease-in-out
	overflow: hidden
	 &:before {
	     content: "";
	     display: block;
	     position: absolute;
		 background: linear-gradient(148.65deg, #fbff4b 35.52%, #ff2323 65.07%)
		 border-radius: rem(50);
		 //width: 100%
		 //height: 100%
		 top: -120px
		 left: -120px
		 right: -120px;
		 bottom: -120px
		 transition transform 300ms ease-in-out
	 }
	span {
		color: #fff;
	}
	&:hover {
		//background-position: 0 0
		//background: linear-gradient(-115.65deg, #FBFF4B 16.52%, #FF2323 84.07%);
		//background: linear-gradient(115.65deg, #FF2323 16.52%, #FBFF4B 84.07%);
		&:before {
			transform rotate(180deg)
		}
	}
}


.js__show {
	opacity: 0
	transition $opacityTransition
}

.animate {
	opacity: 1
}